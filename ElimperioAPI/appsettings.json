{
  // Configuración de la base de datos MongoDB
  "ConfiguraciónBaseDatos": {
    // Cadena de conexión a la base de datos MongoDB
    "CadenaConexion": "mongodb://localhost:27017",
    // Nombre de la base de datos a la que se conectará
    "NombreBaseDatos": "Elimperio",
    // Nombre de la colección en MongoDB para los productos
    "ColeccionImperio": "Productos",
    // Nombre de la colección en MongoDB para los reportes mensuales
    "ColeccionReportesMensuales": "ReportMensual"
  },
  // Configuración del JWT (JSON Web Token) para autenticación
  "JwtSettings": {
    // Clave secreta usada para firmar los tokens JWT
    "SecretKey": "clavesecreta_para_api1hvfukvjhfdjvdjkvnfnhfnhg",
    // Emisor del token (puede ser el nombre de la aplicación)
    "Issuer": "Elimperio",
    // Audiencia del token (los usuarios que recibirán y validarán el token)
    "Audience": "User"
  },
  // Configuración del logging o registro de eventos
  "Logging": {
    // Niveles de logging para diferentes fuentes
    "LogLevel": {
      // Nivel de logging predeterminado: Información
      "Default": "Information",
      // Nivel de logging específico para Microsoft.AspNetCore: Advertencia
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // Configuración para permitir hosts
  "AllowedHosts": "*"
  // El asterisco (*) indica que se permiten todas las solicitudes de cualquier host.
}
