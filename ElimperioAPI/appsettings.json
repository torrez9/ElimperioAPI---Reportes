{
  "ConfiguraciónBaseDatos": {
    "CadenaConexion": "mongodb://localhost:27017",
    "NombreBaseDatos": "Elimperio",
    "ColeccionImperio": "Productos",
    "ColeccionInventario": "ReportInventario",
    "ColeccionVentaPorDia": "VentaPorDia",
    "ColeccionVentaGeneral": "VentaGeneral",
    "ColeccionProductoMasVendido": "ProductoMasVendido",
    "ColeccionBebidaMasVendida": "BebidaMasVendida",
    "ColeccionReportesMensuales": "ReportMensual",
    "ColeccionReportesSemanales": "ReportSemanal",
    "ColeccionPlatoMasVendido": "PlatoMasVendido"
    // Nueva colección
  },

  // Configuración del JWT (JSON Web Token) para autenticación
  "JwtSettings": {
    "Issuer": "TuIssuer",
    "Audience": "TuAudience",
    "SecretKey": "TuClaveSecretaAqui"
  },

  // Configuración del logging o registro de eventos
  "Logging": {
    // Niveles de logging para diferentes fuentes
    "LogLevel": {
      // Nivel de logging predeterminado: Información
      "Default": "Information",
      // Nivel de logging específico para Microsoft.AspNetCore: Advertencia
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Configuración para permitir hosts
  "AllowedHosts": "*"
  // El asterisco (*) indica que se permiten todas las solicitudes de cualquier host.
}
